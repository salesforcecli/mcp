{
  "extends": "@salesforce/dev-config/tsconfig-strict",
  "compilerOptions": {
    "composite": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "strictNullChecks": true,
    "plugins": [{ "transform": "@salesforce/core/lib/messageTransformer", "import": "messageTransformer" }],
    "skipLibCheck": true
  },
  "include": ["./src"],
  "references": [
    {
      "path": "../mcp-provider-api/tsconfig.json"
    },
    {
      "path": "../mcp-provider-code-analyzer/tsconfig.build.json"
    }
  ]
}
